<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
    http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="MyBudget\Domain\Entity\User\UserGroup" table="user_group">
        <id name="id" column="id" type="uuid">
            <generator strategy="NONE" />
        </id>
        <field name="createdAt" column="created_at" type="datetime_immutable" nullable="true"/>
        <field name="updatedAt" column="updated_at" type="datetime_immutable" nullable="true"/>
        <field name="name" column="name" />
        <field name="code" column="code"/>
        <field name="password" column="password"/>
        <many-to-one field="owner" target-entity="MyBudget\Domain\Entity\User\Account">
            <join-column name="owner_id" referenced-column-name="id" />
        </many-to-one>
        <one-to-many field="members" target-entity="MyBudget\Domain\Entity\User\Account" mapped-by="userGroup" />
    </entity>
</doctrine-mapping>
